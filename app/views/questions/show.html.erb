<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <title></title>
</head>

<style>
  .container {
    max-width:800px;
    border: solid 1px #FF773E;
    border-radius:10px 10px 0px 0px;
  }

  .reply-container {
    max-width:800px;
    border: solid 1px rgba(43, 217, 224, 0.68);
    border-radius:10px 10px 0px 0px;
  }

  .answer-container {
    max-width:800px;
    border: solid 1px rgba(16, 189, 54, 0.65);
    border-radius:10px 10px 0px 0px;
  }

  .container-sub {
    max-width:800px;
    border-radius:10px 10px 0px 0px;
  }

  .header {
    background: #FF773E;
    border-radius:10px 10px 0px 0px;
    padding: 15px;
    font-size: 25px;
  }

  .reply-header {
    background: rgba(43, 217, 224, 0.68);
    border-radius:10px 10px 0px 0px;
    padding: 15px;
    font-size: 25px;
  }

  .answer-header {
    background: rgba(16, 189, 54, 0.65);
    border-radius:10px 10px 0px 0px;
    padding: 15px;
    font-size: 25px;
  }

  fieldset{
    padding: 15px;
  }
</style>
<body>


  <div class="container my-5">
    <div class="row header">
      <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
      <img src="<%= "/img/#{@question.user.image_name}" %>" style="border-radius: 50%; height: 40px; width: 40px; margin-right: 10px;">
      <%= link_to("#{@question.user.name}", "/users/#{@question.user.id}/show") + " " + "さんからの質問" %>
    </div>
    <form>
      <fieldset class="form-group">
        <div class="form-group">
          <h2 class="font-weight-bold text-center"><%= link_to(@question.title, "/questions/#{@question.id}/show") %></h2>
        </div>
        <div class="form-group">
          <p><%= @question.content %></p>
        </div>
        <% if @question.image_name %>
        <div class="form-group text-center">
          <img src="<%= "/img/#{@question.image_name}" %>" style="width: 300px; ">
        </div>
        <% end %>

      </fieldset>
    </form>

    <% if @current_user.id == @question.user.id %>
    <div>
      <ul style="list-style: none;">
        <li style="float: left;" class="mr-3"><%= link_to("編集", "/questions/#{@question.id}/edit") %></li>
        <li ><%= link_to("削除", "/questions/#{@question.id}/destroy", {method: "post"}) %></li>
      </ul>
    </div>
    <% end %>
  </div>

  <div class="container my-5 reply-container">
    <div class="row reply-header">
      <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
      返信フォーム
    </div>
    <%= form_tag("/answers/#{@question.id}/create", {multipart: true}) do %>
    <form>
      <fieldset class="form-group">

        <div class="form-group">
          <legend>返信内容</legend>
          <textarea name="content" class="form-control" rows="4" value="<%= @question.content %>" ></textarea>
        </div>

        <% @question.errors.full_messages.each do |message| %>
        <li class="text-danger my-1" style="list-style: none;"><%= message %></li>
        <% end %>
        <% if @login_error_message %>
        <p class="text-danger"><%= @login_error_message %></p>
        <% end %>
        <div class="input-group">

          <input name="image_name" type="file">
        </div>
        <div class="text-center my-3">
          <button type="submit" class="btn btn-primary pull-right">返信する</button>
        </div>
      </fieldset>
    </form>
    <% end %>
  </div>




  <% @answers.each do |ans| %>
  <div class="container my-5 answer-container">
    <div class="row answer-header">
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
        <img src="<%= "/img/#{ans.user.image_name}" %>" style="border-radius: 50%; height: 40px; width: 40px; margin-right: 10px;">
        <%= link_to("#{ans.user.name}", "/users/#{ans.user.id}/show") + " " + "さんの返信" %>
    </div>
    <form>
      <fieldset class="form-group">
        <div class="form-group">
          <p><%= ans.content %></p>
        </div>
        <% if ans.image_name %>
          <div class="form-group text-center">
            <img src="<%= "/img/#{ans.image_name}" %>" style="width: 300px; ">
          </div>
        <% end %>

      </fieldset>
    </form>

    <% if @current_user.id == ans.user.id %>
    <div>
      <ul style="list-style: none;">
        <li ><%= link_to("削除", "/answers/#{ans.id}/destroy", {method: "post"}) %></li>
      </ul>
    </div>
    <% end %>

  </div>
  <% end %>


</body>
</html>
